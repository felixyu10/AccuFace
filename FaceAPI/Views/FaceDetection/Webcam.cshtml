<script src="~/Scripts/webcam.js"></script>

@Html.Partial("~/Views/Shared/_Bar.cshtml")

<div ng-controller="webcam">

    <div class="loadmore">
        <div ng-show="loaderMoreupl" ng-class="result">
            <img src="~/Content/ng-loader.gif" /> {{uplMessage}}
        </div>
    </div>
    <div class="clearfix"></div>

    <div class="col-md-7 col-xs-12 m-b-20">
        <h4 class="m-b-0">
            <b>Live</b>
        </h4>
        <div id="webcam"  style="margin-top:-10px"></div>

        <input type="button" id="SaveSnap" class="btn btn-primary m-t-10" value="偵測"
               onclick="angular.element(this).scope().Capture()" style="font-size: 16px;"/>
        &emsp;
        @*<input type="button" id="SaveSnap" class="btn btn-primary m-t-10" value="自動偵測"
               onclick="alertaa()" style="font-size: 16px;" />*@
    </div>
    <div class="col-md-5 col-xs-12 m-b-20">
        <h4>
            <b>辨識結果</b>
        </h4>
        <div class="col-xs-12">
            <h5 class="color-green m-b-0">{{DetectedResultsMessage}}</h5>
            <hr class="facePreview_hr">
            <div class="facePreview_thumb_small">
                <div ng-repeat="item in DetectedFaces">
                    <div class="col-xs-5">
                        <img ng-src="{{item.FilePath}}" style="width:100%" />
                    </div>
                    <div class="col-xs-7">
                        <ul>
                            <li>名稱：{{item.PersonName}}</li>
                            <li>年齡：{{item.Age}}</li>
                            <li>性別：{{item.Gender}}</li>
                            <li>微笑：{{item.IsSmiling}}</li>
                            <li>情緒：{{item.Emotion}}</li>
                        </ul>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
            <div ng-hide="DetectedFaces.length"></div>
        </div>
    </div>

</div>

@section NgScript{

    <script src="~/Scripts/mine/FaceDetection.js"></script>
}
